@using Microsoft.AspNetCore.Components.Authorization
@inject RenaultSmartCenter.BlazorUI.Services.CustomAuthenticationStateProvider AuthStateProvider
@inject RenaultSmartCenter.BlazorUI.Services.ILocalStorageService LocalStorage
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <div class="top-bar-content">
            <div class="top-bar-left">
                <h4>Renault Smart Center ERP</h4>
            </div>
            <div class="top-bar-right">
                <span class="user-info">@userName</span>
                <button class="btn-logout" @onclick="HandleLogoutAsync">Logout</button>
            </div>
        </div>
    </Authorized>
</AuthorizeView>

<style>
    .top-bar-content {
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .top-bar-left h4 {
        margin: 0;
        color: #FFD700;
    }

    .top-bar-right {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .user-info {
        color: #ccc;
    }

    .btn-logout {
        background: #d32f2f;
        color: #fff;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-logout:hover {
            background: #c62828;
        }
</style>

@code {
    private string userName = string.Empty;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            userName = authState.User.Identity?.Name ?? "User";
            StateHasChanged();
        }
    }

    private async Task HandleLogoutAsync()
    {
        // حذف التوكن من localStorage
        await LocalStorage.RemoveItemAsync("authToken");

        // تحديث Authentication State
        await AuthStateProvider.MarkUserAsLoggedOutAsync();

        // تحويل المستخدم لصفحة login
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}
